{{!< ../default}}

<article class="post-content">

    <div class="signin-page container">
        <h1 class="post-content-title">Log in</h1>

        <form class="herosub" data-members-form="signin">
            <div class="herosub-box">
                <input data-members-email type="email" placeholder="Type your email..." required="true" autocomplete="false" />
                <button class="button primary" type="submit">
                    <span class="button-content">Email login link</span>
                    <span class="button-loader">{{> "icons/loader"}}</span>
                </button>
            </div>
            <div class="message-success"><strong>Great!</strong> Check your inbox and click the link to complete signin</div>
            <div class="message-error">Please enter a valid email address!</div>
        </form>

    </div>

</article>