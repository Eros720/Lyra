{{!< ../default}}

<header class="site-header">
    {{> site-header}}
</header>
<main id="site-main" class="site-main site-signup outer">
    <div class="inner">

    {{^if @member}}

        {{!-- If logged out: Sign in --}}
        <form class="signin-form" data-members-form="signin">
            <h1>Welcome back!</h1>
            <p>Sign into your account again for full access</p>
            <div class="signup-box">
                <input data-members-email type="email" placeholder="Your email" required="true" autocomplete="false" />
                <button class="button primary" type="submit">
                    <span class="button-content">Continue</span>
                    <span class="button-loader">{{> "icons/loader"}}</span>
                </button>
            </div>
            <div class="message-success"><strong>Great!</strong> Check your inbox and click the link to complete signin</div>
            <div class="message-error">Please enter a valid email address!</div>
        </form>

    {{else}}

        {{!-- If logged in: Redirect home --}}
        <script>window.location = '/';</script>

    {{/if}}

    </div>
</main>